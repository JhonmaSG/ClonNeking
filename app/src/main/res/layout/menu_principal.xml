<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDEBEB"
    android:backgroundTint="#EDE7E7"
    tools:context=".MainActivity">

    <!-- View del desenfoque -->
    <View
        android:id="@+id/blur_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#88000000"
        android:visibility="gone" />

    <!-- Rectángulos de fondo -->
    <View
        android:id="@+id/rounded_rectangle_view"
        android:layout_width="488dp"
        android:layout_height="437dp"
        android:layout_marginStart="-10dp"
        android:layout_marginTop="-70dp"
        android:background="@drawable/rounded_rectangle_pink"
        android:rotation="-6"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/rounded_rectangle_view2"
        android:layout_width="491dp"
        android:layout_height="418dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="-85dp"
        android:background="@drawable/rounded_rectangle_purple"
        android:rotation="-6"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Imagen de usuario -->
    <View
        android:id="@+id/rounded_rectangle_view3"
        android:layout_width="57dp"
        android:layout_height="55dp"
        android:layout_marginStart="328dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/userlogo"
        android:rotation="0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Botones y vista principal -->

    <View
        android:id="@+id/rounded_rectangle_view5"
        android:layout_width="259dp"
        android:layout_height="74dp"
        android:background="@drawable/rounded_rentangle_grey"
        android:rotation="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.184"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.975" />

    <!-- Botones desplegables -->

    <Button
        android:id="@+id/btnAccion"
        android:layout_width="64dp"
        android:layout_height="57dp"
        android:backgroundTint="#E9078F"
        android:text="$"
        android:textAlignment="center"
        android:textSize="25sp"
        app:cornerRadius="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.683"
        app:layout_constraintStart_toEndOf="@+id/rounded_rectangle_view5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.956" />

    <Button
        android:id="@+id/btnAction1"
        android:layout_width="64dp"
        android:layout_height="57dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#E9078F"

        android:textAlignment="center"
        android:textSize="30sp"
        android:visibility="gone"
        app:cornerRadius="16dp"
        app:layout_constraintBottom_toTopOf="@id/btnAccion"
        app:layout_constraintEnd_toEndOf="parent"
        android:drawableTop="@drawable/back_row"
        android:drawablePadding="8dp"
        />
    <TextView
        android:id="@+id/descAction1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/manrope_bold"
        android:text="Enviar Dinero"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/btnAction1"
        app:layout_constraintEnd_toStartOf="@id/btnAction1" />
    <Button
        android:id="@+id/btnAction2"
        android:layout_width="64dp"
        android:layout_height="57dp"
        android:layout_marginEnd="16dp"
        android:visibility="gone"
        android:backgroundTint="#E9078F"

        android:textAlignment="center"
        android:textSize="30sp"
        app:cornerRadius="16dp"
        app:layout_constraintBottom_toTopOf="@id/btnAction1"
        app:layout_constraintEnd_toEndOf="parent"
        android:drawableTop="@drawable/up_row"
        android:drawablePadding="8dp"
        />
    <TextView
        android:id="@+id/descAction2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/manrope_bold"
        android:text="Recargar"
        android:visibility="gone"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/btnAction2"
        app:layout_constraintEnd_toStartOf="@id/btnAction2" />
    <Button
        android:id="@+id/btnAction3"
        android:layout_width="64dp"
        android:layout_height="57dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#E9078F"
        android:textAlignment="center"
        android:textSize="40sp"
        android:visibility="gone"
        app:cornerRadius="16dp"
        app:layout_constraintBottom_toTopOf="@id/btnAction2"
        app:layout_constraintEnd_toEndOf="parent"

        android:drawablePadding="8dp"
        />
    <TextView
        android:id="@+id/descAction3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/manrope_bold"
        android:text="Sacar"
        android:visibility="gone"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/btnAction3"
        app:layout_constraintEnd_toStartOf="@id/btnAction3" />
    <Button
        android:id="@+id/btnAction4"
        android:layout_width="64dp"
        android:layout_height="57dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#E9078F"

        android:textAlignment="center"
        android:textSize="20sp"
        android:visibility="gone"
        app:cornerRadius="16dp"
        app:layout_constraintBottom_toTopOf="@id/btnAction3"
        app:layout_constraintEnd_toEndOf="parent"
        android:drawableTop="@drawable/qrcode"
        android:drawablePadding="8dp"
        />


    <TextView
        android:id="@+id/descAction4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/manrope_bold"
        android:text="Código QR"
        android:visibility="gone"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/btnAction4"
        app:layout_constraintEnd_toStartOf="@id/btnAction4" />

    <Button
        android:id="@+id/buttonnotification"
        android:layout_width="49dp"
        android:layout_height="50dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/bell"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewdisp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginTop="160dp"
        android:fontFamily="@font/manrope_bold"
        android:text="Disponible"
        android:textColor="#FAF5F5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textViewMoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="216dp"
        android:fontFamily="@font/manrope_bold"
        android:text="100.000.00"
        android:textColor="#EDE7E7"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnColchon"
        android:layout_width="76dp"
        android:layout_height="81dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="476dp"
        android:background="@drawable/colchoncito"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewColchon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="560dp"
        android:text="Colchon"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnhistory"
        android:layout_width="49dp"
        android:layout_height="48dp"
        android:layout_marginStart="196dp"
        android:background="@drawable/listlogo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/rounded_rectangle_view5"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.957" />

    <Button
        android:id="@+id/btnhome"
        android:layout_width="60dp"
        android:layout_height="43dp"
        android:layout_marginStart="28dp"
        android:background="@drawable/home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/rounded_rectangle_view5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.95" />

    <Button
        android:id="@+id/btnview"
        android:layout_width="29dp"
        android:layout_height="20dp"
        android:layout_marginStart="232dp"
        android:layout_marginTop="160dp"
        android:background="@drawable/eye"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <TextView
        android:id="@+id/textViewUsuario"
        android:layout_width="66dp"
        android:layout_height="40dp"
        android:layout_marginStart="250dp"
        android:layout_marginTop="35dp"
        android:fontFamily="@font/manrope_bold"
        android:text="HOLA USUARIO"
        android:textColor="#F1EDED"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>