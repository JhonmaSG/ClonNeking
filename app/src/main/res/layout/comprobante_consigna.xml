<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:animateLayoutChanges="true"
    android:visibility="visible"
    app:cardBackgroundColor="#FFFFFF"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/h_consignar"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:orientation="horizontal"
        android:paddingStart="3dp"
        android:paddingTop="7dp"
        android:paddingBottom="3dp">

        <ImageView
            android:id="@+id/flecha_arriba_compro_c"
            android:layout_width="21dp"
            android:layout_height="17dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.18"
            app:srcCompat="@drawable/flecha_hacia_arriba" />

        <TextView
            android:id="@+id/nombre_user_h_c"
            android:layout_width="177dp"
            android:layout_height="28dp"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/manrope_light"
            android:text="Hola"
            android:textColor="#1E1E1E"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/flecha_arriba_compro_c"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.19" />

        <TextView
            android:id="@+id/estado_user_h_c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/manrope_light"
            android:text="Para"
            android:textColor="#8C8888"
            android:textSize="10sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/nombre_user_h_c"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/nombre_user_h_c"
            app:layout_constraintTop_toBottomOf="@+id/nombre_user_h_c" />

        <TextView
            android:id="@+id/valor_user_h_c"
            android:layout_width="154dp"
            android:layout_height="26dp"
            android:fontFamily="@font/manrope_light"
            android:text="$3000"
            android:textColor="#E9078F"
            android:textSize="16sp"
            android:textStyle="bold"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.45"
            app:layout_constraintStart_toEndOf="@+id/nombre_user_h_c"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.19999999" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>